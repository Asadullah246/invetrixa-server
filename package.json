{
  "name": "pxlhut-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./test/jest-e2e.json --forceExit",
    "test:integration": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./test/jest-integration.json --forceExit",
    "docker:test": "docker compose -f docker-compose.dev.yml exec app pnpm test",
    "docker:test:integration": "docker compose -f docker-compose.dev.yml exec app pnpm test:integration",
    "docker:test:e2e": "docker compose -f docker-compose.dev.yml exec app pnpm test:e2e",
    "postinstall": "prisma generate || echo 'Prisma generate skipped (will run in Docker)'",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate": "pnpm exec prisma migrate dev",
    "prisma:reset": "pnpm exec prisma migrate reset",
    "prisma:seed": "pnpm exec prisma db seed",
    "seed:demo": "npx tsx prisma/seed/demo/index.ts",
    "prisma:studio": "pnpm exec prisma studio",
    "prisma:validate": "pnpm exec prisma validate",
    "prisma:migrate:docker": "DATABASE_URL=\"postgresql://postgres:password@localhost:${DB_PORT:-5432}/pxlhut\" pnpm exec prisma migrate dev",
    "type-check": "tsc --noEmit",
    "docker:build": "docker compose -f docker-compose.dev.yml build",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d --build && docker compose -f docker-compose.dev.yml logs -f app",
    "docker:up:tools": "docker compose -f docker-compose.dev.yml --profile tools up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml --profile tools down",
    "docker:stop": "docker compose -f docker-compose.dev.yml --profile tools stop",
    "docker:start": "docker compose -f docker-compose.dev.yml --profile tools start",
    "docker:restart": "docker compose -f docker-compose.dev.yml restart app",
    "docker:restart:all": "docker compose -f docker-compose.dev.yml --profile tools restart",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f app",
    "docker:logs:all": "docker compose -f docker-compose.dev.yml --profile tools logs -f",
    "docker:clean": "docker compose -f docker-compose.dev.yml --profile tools down -v",
    "docker:ps": "docker compose -f docker-compose.dev.yml --profile tools ps",
    "docker:shell": "docker compose -f docker-compose.dev.yml exec app sh",
    "docker:seed": "docker compose -f docker-compose.dev.yml exec app pnpm exec prisma db seed",
    "docker:seed:demo": "docker compose -f docker-compose.dev.yml exec app pnpm run seed:demo",
    "docker:reset:db": "docker compose -f docker-compose.dev.yml exec app pnpm exec prisma migrate reset --force",
    "db:reset": "npx tsx scripts/db-reset.ts",
    "db:seed": "npx tsx scripts/db-seed.ts",
    "docker:reset": "npx tsx scripts/docker-db-reset.ts",
    "docker:studio": "docker compose -f docker-compose.dev.yml exec -d app pnpm exec prisma studio --browser none --port 5555",
    "docker:generate": "docker compose -f docker-compose.dev.yml exec app pnpm exec prisma generate",
    "docker:migrate": "docker compose -f docker-compose.dev.yml exec app pnpm exec prisma migrate dev",
    "docker:build:prod": "docker build -t pxlhut-server:latest -f Dockerfile .",
    "docker:test:prod": "docker compose -f docker-compose.test-prod.yml up --build",
    "docker:test:prod:down": "docker compose -f docker-compose.test-prod.yml down -v",
    "health": "curl -f http://localhost:8080/health || echo 'Health check failed'",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "7.3.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.67.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "connect-timeout": "^1.9.1",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "libphonenumber-js": "^1.12.36",
    "nodemailer": "^7.0.13",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "prisma-client": "^0.0.0",
    "redis": "^5.9.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/connect-timeout": "^1.9.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",
    "@types/nodemailer": "^7.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prisma": "7.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^generated/(.*)$": "<rootDir>/../generated/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@/(.*)$": "<rootDir>/$1",
      "^uuid$": "<rootDir>/__mocks__/uuid.js"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
